{
    "name": "pokerphace/phalcon-app",
    "description": "A project to test concepts about software engineering",
    "config": {
        "bin-dir": "bin/",
        "platform": {
            "php": "8.0.0"
        }
    },
    "repositories": [
        { "type": "vcs", "url": "https://github.com/pokerphace/domain" }
    ],
    "require": {
        "php": "8.0.0",
        "slim/slim": "4.7.1",
        "slim/psr7": "1.3.0",
        "pokerphace/domain": "dev-main"
    },
    "require-dev": {
        "behat/behat": "3.8.1",
        "phpunit/phpunit": "9.5.0"
    },
    "autoload": {
        "psr-4": {
            "Pokerphace\\AcceptanceTest\\Context\\": "test/acceptance/context/"
        }
    },
    "scripts": {
        "test": [
            "@acceptanceTest",
            "@unitTest"
        ],
        "acceptanceTest": "bin/behat",
        "unitTest": "phpunit --configuration config/phpunit.xml"
    }
}
